%html
  %head
    %title CycloneShare
    = csrf_meta_tags
    = csp_meta_tag

    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, shrink-to-fit=no'}

    = stylesheet_link_tag    'application', media: 'all'
    = stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css', integrity: 'sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B', crossorigin: 'anonymous'
